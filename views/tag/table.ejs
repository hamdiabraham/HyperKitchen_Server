<table id="example2" class="table table-bordered table-hover">
  <thead>
  <tr>
    <th>No.</th>
    <th>Name</th>
    <th>Action</th>
  </tr>
  </thead>
  <tbody>
    <% for( let i = 0; i < tag.length; i++ ) { %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= tag[i].name %></td>
          <td>
            <form action="/tag/delete/<%= tag[i]._id  %>?_method=DELETE" method="post">
              <a href="/tag/edit/<%= tag[i]._id  %>" class="btn btn-info btn-sm">
                <i class="fas fa-pencil-alt"></i>
                Edit
              </a>
              <button href="" class="btn btn-danger btn-sm">
                <i class="fas fa-trash"></i>
                Delete
              </button>
            </form>
          </td>
        </tr>
    <% } %>
  </tbody>
</table>