<%- include('../_header.ejs') %> 
<%- include('../_navbar.ejs') %> 
<%- include('../_sidebar.ejs') %> 

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Tag</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
            <li class="breadcrumb-item"><a href="/tag">Tag</a></li>
            <li class="breadcrumb-item active">Add Tag</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Tag Form</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/tag/create" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label for="name">Add New Tag</label>
                  <input type="text" name="name" class="form-control" id="name" placeholder="Enter New Category" required>
                </div>
              </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

